<div class="container">
  <div class="row">
    <div class=" col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h1><%= t('user_sessions.new.title')%></h1>
      <%= form_with url: login_path do |f| %>
        <div class="form-group">
          <%= f.label :email %>
          <%= f.text_field :email, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
        <div style="margin-bottom: 15px;"></div> <!-- スペースを追加するための空のdiv要素 -->
        <div class="actions">
          <%= f.submit t('user_sessions.new.login'), class: 'btn btn-primary' %>
        </div>
      <% end %>
      <div class='text-center'>
        <%= link_to t('user_sessions.new.to_register_page'), new_user_path %>
        <%= link_to t('user_sessions.new.password_forget'), '#' %>
      </div>
    </div>
  </div>
</div>